@model IEnumerable<AssistenciaSocial.PontuaCasos.WebApp.Models.ViewModelCategoriaFamiliar>

<h4>Sobre a fam√≠lia</h4>
<hr />
<table class="table">
    <tbody>
        @foreach (var categoria in Model)
        {
            if (categoria.Itens != null)
            {
                <tr>
                    <td class="fw-bold fs-5">
                        @Html.DisplayFor(modelItem => categoria.Categoria.Titulo)
                    </td>
                    @foreach (var itemCategoria in categoria.Itens.OrderBy(i => i.Item.Pontos))
                    {
                        var item = itemCategoria.Item;

                        <td>
                            <label for="@item.Titulo" class="fw-light">@item.Titulo</label>
                        </td>
                        <td>
                            <input class="me-5" id="@item.Id" type="checkbox" name="@item.Titulo" value="itens_@item.Id"
                    checked="@itemCategoria.Selecionado" />
                        </td>
                    }
                </tr>
            }
        }
    </tbody>
</table>