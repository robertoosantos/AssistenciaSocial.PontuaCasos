}

<h1>Remover</h1>

<h3>Tem certeza que quer remover esta violência?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Violencia.Titulo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Violencia.Titulo)
