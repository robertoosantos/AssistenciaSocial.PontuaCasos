@model AssistenciaSocial.PontuaCasos.WebApp.Models.Caso

@{
    ViewData["Title"] = "Novo Caso";
}

<h1>Novo Caso</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ResponsavelFamiliar" class="control-label"></label>
                <input asp-for="ResponsavelFamiliar" class="form-control" />
                <span asp-validation-for="ResponsavelFamiliar" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prontuario" class="control-label"></label>
                <input asp-for="Prontuario" class="form-control" />
            </div>
            <div class="form-group mt-5 ">
                @if (ViewBag.Categorias != null)
                {
                    <partial name="~/Views/Shared/_CategoriaSelect.cshtml" model="@ViewBag.Categorias"  />
                }
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>
