@model AssistenciaSocial.PontuaCasos.WebApp.Models.Caso

@{
    ViewData["Title"] = "Detalhes do Caso";
}

<h1>Detalhes do Caso</h1>
<a asp-action="History" asp-route-id="@Model.Id">Ver Histórico</a>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResponsavelFamiliar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResponsavelFamiliar)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prontuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prontuario)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pontos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pontos)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CriadoEm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CriadoEm)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModificadoEm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModificadoEm)
        </dd>
    </dl>
</div>
<div>
    <h4>Sobre a família</h4>
    @if (ViewData["Editando"] != null && (bool)ViewData["Editando"] == true)
    {
        <a asp-action="Create" asp-controller="Atendidos" asp-route-caso_id="@Model.Id" class="btn btn-primary">Adicionar Novo Ciclo</a>        
    }
    <hr />
    <partial name="~/Views/Shared/_CategoriaList.cshtml" model="@Model.Categorias" />
    <h4>Ciclos em Violação</h4>
    @if (ViewData["Editando"] != null && (bool)ViewData["Editando"] == true)
    {
        <a asp-action="Create" asp-controller="Atendidos" asp-route-caso_id="@Model.Id" class="btn btn-primary">Adicionar Novo Ciclo</a>        
    }
    <hr />
    <partial name="~/Views/Shared/_IndividuosList.cshtml" model="@Model.Individuos" />
</div>
<div>
    <a asp-action="Index">Voltar</a>
</div>
