@model AssistenciaSocial.PontuaCasos.WebApp.Models.Caso

@{
    ViewData["Title"] = "Detalhes do Caso";
}

<h1>Detalhes do Caso</h1>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ResponsavelFamiliar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ResponsavelFamiliar)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Prontuario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Prontuario)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pontos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pontos)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CriadoEm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CriadoEm)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ModificadoEm)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ModificadoEm)
        </dd>
    </dl>
</div>
<div>
    <h4>Sobre a família</h4>
    <hr />
    <partial name="~/Views/Shared/_CategoriaList.cshtml" model="@Model.Categorias" />
    <h4>Pessoas em Violação</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>Ciclo de Vida</th>
                <th>Violências</th>
                <th>Situações</th>
                <th>Condições</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var individuo in Model.Individuos)
                {
                    <tr>
                        <td>@Html.DisplayFor(model => individuo.Item.Titulo) <span class="pontos">(@Html.DisplayFor(model =>
                        individuo.Item.Categoria.Pontos) x @Html.DisplayFor(model =>
                        individuo.Item.Pontos))</span></td>
                        <td>
                            <ul class="list-unstyled">
                                @foreach (var violencia in individuo.ViolenciasSofridas)
                                {
                                    <li>@Html.DisplayFor(model => violencia.Violencia.Titulo) <span
                                    class="pontos">(@Html.DisplayFor(model => violencia.Violencia.Categoria.Pontos) x
                                            @Html.DisplayFor(model => violencia.Violencia.Pontos))</span></li>
                                }
                            </ul>
                        </td>
                        <td>
                            @if (individuo.ViolenciasSofridas != null)
                            {
                                <ul class="list-unstyled">
                                    @foreach (var violencia in individuo.ViolenciasSofridas)
                                    {

                                        <li>
                                            @if (violencia.Situacao != null)
                                            {
                                                @Html.DisplayFor(model => violencia.Situacao.Titulo) <span
                                    class="pontos">(@Html.DisplayFor(model => violencia.Situacao.Categoria.Pontos) x
                                                    @Html.DisplayFor(model => violencia.Situacao.Pontos))</span>
                                            }
                                            else
                                            {
                                                <span class="fw-lighter">Desconhecida</span>
                                            }
                                        </li>
                                    }
                                </ul>
                            }
                        </td>
                        <td>
                            @if (individuo.SituacoesDeSaude != null)
                            {
                                <ul class="list-unstyled">
                                    @foreach (var saude in individuo.SituacoesDeSaude)
                                    {
                                        <li>@Html.DisplayFor(model => saude.Titulo) <span class="pontos">(@Html.DisplayFor(model =>
                                saude.Categoria.Pontos) x @Html.DisplayFor(model =>
                                saude.Pontos))</span></li>
                                    }
                                </ul>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-controller="Individuos" asp-route-id="@individuo.Id">Editar</a> |
                            <a asp-action="Delete" asp-controller="Individuos" asp-route-id="@individuo.Id">Remover</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Create" asp-controller="Atendidos" asp-route-caso_id="@Model.Id">Adicionar Atendidos</a> |
    <a asp-action="Index">Voltar</a>
</div>
